## Load appearance settings
	xsetroot -cursor_name left_ptr &
	export GTK2_RC_FILES="$HOME/.gtkrc-2.0" &
	xrdb merge .Xresources &
## Wallpaper. Nitrogen just draws wallpaper, 
## compositing. Required for shadows, transparency and stuff. 
# Alter compton settings if using intel graphics

GRAPHIC_CARD=$(lspci | grep -i "vga" | sed 's/.*://' | sed 's/(.*//' | sed 's/^[ \t]*//')
	if [[ $(echo $GRAPHIC_CARD | grep -i 'intel\|lenovo') != "" ]]; then MCODE='initrd=\intel-ucode.img'
		sed -i 's/"xrender"/"glx"/' ~/.config/picom.conf
		grep -q 'vsync = "opengl-swc";' ~/.config/picom.conf || echo 'vsync = "opengl-swc";' >> ~/.config/picom.conf
	fi
## Reduces flicker. Disabling saves resources.
	picom -b &
## enable local fonts in .fonts directory
	xset +fp $HOME/.local/share/fonts &
## xset +fp $HOME/.local/share/fonts/NerdFonts &
	xset +fp /usr/share/fonts/local &
	xset +fp /usr/share/fonts/misc &
	xset fp rehash &
	fc-cache -fv &
	nm-applet &
## Automount removable media
 devmon &
## powersaving options
	xset s off &
	xset s noblank &
	xset s noexpose &
 	xset c on &
	xset -dpms &
	wal -R &
	feh --bg-scale `cat $HOME/.cache/wal/wal` &
	sxhkd &
##	xbacklight -set 15 &
	$HOME/.config/polybar/launch.sh &

## Map super key to trigger rofi when used alone
	xcape -e 'Super_L=Super_L|Shift_L|space' &
